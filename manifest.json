{
  "manifest_version": 3,
  "name": "Browser Dimmer",
  "version": "1.0.0",
  "description": "Adjust page brightness per-tab with a quick slider.",
  "icons": {
    "16": "icons/generated/icon16.png",
    "32": "icons/generated/icon32.png",
    "48": "icons/generated/icon48.png",
    "128": "icons/generated/icon128.png"
  },
  "action": {
    "default_title": "Adjust brightness",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/generated/icon16.png",
      "32": "icons/generated/icon32.png",
      "48": "icons/generated/icon48.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
